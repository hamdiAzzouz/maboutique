{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>Connexion</h1>
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post">
			<label for="username">Votre Email:</label>
			<input type="text" class='form-control' id="username" name="_username" value="{{ last_username }}" required>

			<label class="mt-3" for="password">Votre mot de passe:</label>
			<input type="password" class='form-control' id="password" name="_password" required>


			<input type="hidden" name="_target_path" value="{{path('app_account')}}">

			<button class="btn btn-success mt-3" type="submit">Me connecter</button>
		</form>
		<br/>Vous n'avez pas de compte ?
		<a href="{{path('app_register') }}">inscrivez vous !</a>
	</div>
{% endblock %}
