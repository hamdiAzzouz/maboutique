{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>RÃ©capitulatif</h1>
		<div class="row">
			<div class="col-md-8">
				<div class="bg-light p-3">
					<strong>Contenu de mon panier</strong>
					{% for product in cart %}
						<div class="row mt-2">
							<div class="col-md-2">
								<img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name}}">
							</div>
							<div class="col-md-6">
								<strong>{{ product.object.name}}</strong>
								<span class="d-block small">prix unitaire:
									{{product.object.pricewt|price}}</span>
							</div>
							<div class="col-md-2 text-right">
								<span class="badge text-bg-secondary">x{{product.qty}}</span>
							</div>
							<div class="col-md-2">
								<strong>{{ (product.qty*product.object.pricewt)|price}}</strong>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="bg-light p-3 my-3">
					<strong>Votre adresse de livraison</strong>
					<br>
					{{choices.adresses.firstname}}
					{{choices.adresses.lastname}}
					<br>
					{{choices.adresses.adress}}
					<br>
					{{choices.adresses.cit}}
					-
					{{choices.adresses.country}}
				</div>
				<div class="bg-light p-3 my-3">
					<strong>Votre transporteur</strong>
					<br>
					{{choices.carriers.name}}
					<br>
					{{choices.carriers.description|raw}}
				</div>

			</div>
			<div class="col-md-4">
				<div class="bg-light p-3">
					<div class="d-flex justify-content-between">
						<span class="fw-bold">Total produit</span>
						<span>{{fullCartQuantity}}</span>
					</div>
					<div class="d-flex justify-content-between">
						<span class="fw-bold">Total transporteur</span>
						<span>{{choices.carriers.price|price}}</span>
					</div>
					<div class="d-flex justify-content-between mt-3">
						<span class="fw-bold">Total commande</span>
						<span>{{(totalwt + choices.carriers.price)|price}}</span>

					</div>
					<div>
						<a href="#" class="btn btn-success w-100 mt-3">Payer</a>
					</div>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
